{
  "name": "react-scaffold-template",
  "version": "0.1.0",
  "scripts": {
    "start": "env-cmd -f .env.local craco start",
    "build": "craco build",
    "serve": "env-cmd -f .env.prod serve -s build",
    "test": "jest",
    "test:snapshot": "yarn test --updateSnapshot",
    "test:coverage": "yarn test --coverage --updateSnapshot --detectOpenHandles",
    "test:clear": "jest --clearCache",
    "tsc": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"{src,test}/**/*.{ts, tsx}\" --fix",
    "lint:ci": "rimraf eslint-report.json && eslint src --format json -o eslint-report.json || find eslint-report.json",
    "sortjson": "sortjson src/i18n/locales",
    "prepare": "husky"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "env-cmd": "^10.1.0",
    "i18next": "^23.11.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.1",
    "react-scripts": "5.0.1",
    "serve": "^14.2.3",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@craco/types": "^7.1.0",
    "@eslint/js": "^9.2.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.11",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.2.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-multiple-result-processors": "^0.0.4",
    "json-sort-cli": "^4.0.3",
    "react-app-alias": "^2.2.2",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  }
}
